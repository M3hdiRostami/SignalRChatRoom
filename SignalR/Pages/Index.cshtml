@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<h2 class="display-5 text-center">Welcome</h2>
<div class="p-5 col-6 card container align-items-center">

    <form action="chat" method="Get" class="col-12">
        <div class="form-group ">
            <label for="exampleInputEmail1">User name</label>
            <input required name="username" type="text" class="form-control" placeholder="username">
            <small class="form-text text-muted">Enter your name </small>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">twitter</label>
            <input name="twitterID" type="text" class="form-control"  placeholder="twitter ID">
            <small class="form-text text-muted">Enter your twitter ID </small>
        </div>

        <button type="submit" class="btn btn-success ">Enter to chat</button>
    </form>
</div>
